<%- include("header") -%>

<title>Public Ledger</title>

<body class="formBody liveScore">
  <div class="mgtop"></div>
  <div class="mgtop"></div>

  <div data-aos="zoom-in-down">
    <div class="d-grid gap-2 d-md-block scoreButtonGroup">
      <button
        class="btn btn-lg btn-primary scoreButton"
        type="button"
        style="border-radius: 20px"
      >
        Public Ledger
      </button>
    </div>
    <div class="card col-sm-12 mx-auto">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">S.No</th>
              <th scope="col">Name</th>
              <th scope="col">Collected</th>
              <th scope="col">Spend</th>
            </tr>
          </thead>
          <tbody>
            <% let i=0; let totalBill=0; data.bills.forEach(bill=> { i++;
            totalBill += bill.collected - bill.spend; %>
            <tr class="table-danger">
              <th scope="row"><%= i %></th>
              <td><%= bill.name %></td>
              <td><%= bill.collected %></td>
              <td>-<%= bill.spend %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <tr class="table-danger">
          <th scope="row">Remain Amount:</th>
          <td class="totalScore"><%= totalBill %></td>
        </tr>
      </div>
    </div>
  </div>

  <link rel="stylesheet" href="css/complaints.css" />

  <div class="feedback" data-aos="zoom-in-down">
    <div class="box" id="heading">
      <h1>Complaints</h1>
    </div>
    <iframe
      src="https://docs.google.com/forms/d/e/1FAIpQLSeJEPt3xvGd-byDsc3VDWHvfcm8NOBF5hJkM1heYBZwg4qz3g/viewform?embedded=true"
      frameborder="0"
      marginheight="0"
      marginwidth="0"
      >Loadingâ€¦</iframe
    >
  </div>

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
  <div class="mgtop"></div>
  <%- include("footer") -%>
</body>

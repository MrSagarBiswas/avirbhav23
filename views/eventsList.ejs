<%- include("header") -%>

  <title>Events List</title>

  <body class="formBody liveScore">
    <div class="mgtop"></div>

    <div data-aos="zoom-in-down">
      <div class="d-grid gap-2 d-md-block eventButtonGroup">
        <button class="btn btn-lg btn-warning eventButton" type="button" style="border-radius: 40px;">
          Ongoing
        </button>
      </div>
      <div class="card  col-sm-12 mx-auto ongoing">
        <div class="card-body">
          <table class="table ">
            <thead class=" align-content-center">
              <tr>
                <th scope="col">S.No</th>
                <th scope="col">Event Name</th>
                <th scope="col">Start</th>
                <th scope="col">End</th>
              </tr>
            </thead>
            <tbody>
              <% let i=0; eventsList.forEach(event=> { if(event.status ==
                "ongoing"){ i++;%>
                <tr>
                  <th scope="row">
                    <%= i %>
                  </th>
                  <td>
                    <%= event.eventName %>
                  </td>
                  <td>
                    <% let startDate=event.startDate; if (startDate=="" ){startDate="Not Decleared" }; %>
                      <%= startDate %>
                        <%=
                          event.startTime %>
                  </td>
                  <td>
                    <% let endDate=event.endDate; if (endDate=="" ){endDate="Not Decleared" }; %>
                      <%= endDate %>
                        <%=
                          event.endTime %>
                  </td>
                </tr>
                <% }}) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div data-aos="zoom-in-down">
      <div class="d-grid gap-2 d-md-block eventButtonGroup">
        <button class="btn btn-lg btn-primary eventButton" type="button" style="border-radius: 40px;">
          UpComing
        </button>
      </div>
      <div class="card  col-sm-12 mx-auto upcoming">

              </tr>
            </thead>
            <tbody>
              <% let j=0; eventsList.forEach(event=> { if(event.status == "upcoming"){ j++;%>
                <tr>
                  <th scope="row">
                    <%= j %>
                  </th>
                  <td>
                    <%= event.eventName %>
                  </td>
                  <td>
                    <% let startDate=event.startDate; if (startDate=="" ){startDate="Not Decleared" }; %>
                      <%= startDate %>
                        <%=
                          event.startTime %>
                  </td>
                  <td>
                    <% let endDate=event.endDate; if (endDate=="" ){endDate="Not Decleared" }; %>
                      <%= endDate %>
                        <%=
                          event.endTime %>
                  </td>
                </tr>
                <% }}) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div data-aos="zoom-in-down">
      <div class="d-grid gap-2 d-md-block eventButtonGroup">
        <button class="btn btn-lg btn-success eventButton" type="button" style="border-radius: 40px;">
          Completed
        </button>
      </div>

      <div class="card  col-sm-12 mx-auto completed">

<%- include("header") -%>


    <title>Add on Public Ledger</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.0/examples/sign-in/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <!-- Custom styles for this template -->
    <link href="css/styles.css" rel="stylesheet" />
  </head>

  <body class="text-center formBody">
      
      <form class="form-signin" method="post" action="/addledger">
        <img class="mb-4" src="/images/logo.png" alt="" width="200" height="200" />
        <div
          class="status alert alert-success"
          style="display: <%= display %>; max-width: 250px; margin: auto"
        >
          Added Successfully...
        </div>
      <h1 class="h3 mb-3 font-weight-bold">Add on Public Ledger</h1>

      <input type="text"
      name="name"
      required
      class="form-control"
      placeholder="Name" />
      <input
        type="number"
        name="collected"
        required
        id="Gain"
        class="form-control"
        placeholder="Collected"
      />
      <input
        type="number"
        name="spend"
        required
        class="form-control"
        placeholder="Spend"
      />
      <input type="hidden" name="authCode" value="<%= authCode %>" />
      <button class="btn btn-lg btn-warning btn-block" type="submit">
        Add on Ledger
      </button>
    </form>
    <div class="mgtop"></div>
    <%- include("footer") -%>
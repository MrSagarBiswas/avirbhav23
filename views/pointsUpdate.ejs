<%- include("header") -%>


    <title>Points Update</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.0/examples/sign-in/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />

    <!-- Custom styles for this template -->
    <link href="css/styles.css" rel="stylesheet" />
  </head>

  <body class="text-center formBody">
      
      <form class="form-signin" method="post" action="/pointsUpdate">
        <img class="mb-4" src="/images/logo.png" alt="" width="200" height="200" />
        <div
          class="status alert alert-success"
          style="display: <%= display %>; max-width: 250px; margin: auto"
        >
          Updated Successfully...
        </div>
      <h1 class="h3 mb-3 font-weight-bold">Update Points</h1>

      <select name="teamName" class="dp">
        <option value="nandiastra">Nandiastra</option>
        <option value="agniastra">Agniastra</option>
        <option value="jalastra">Jalastra</option>
        <option value="vayuastra">Vayuastra</option>
      </select>
      <select name="eventName" class="dp">
        <% let i=0; eventsList.forEach(event => { i++;%>
        <option value="<%= event.eventName %>"><%= i %>. <%= event.eventName %></option>
        <% }) %>
      </select>
      <select name="position" class="dp">
        <option value="-">-</option>
        <option value="1st">1st</option>
        <option value="2nd">2nd</option>
        <option value="3rd">3rd</option>
        <option value="4th">4th</option>
      </select>
      <input
        type="number"
        name="score"
        required
        id="Gain"
        class="form-control"
        placeholder="Points Gain"
      />
      <input
        type="number"
        name="penalty"
        required
        class="form-control"
        placeholder="Penalty"
      />
      <input type="hidden" name="authCode" value="<%= authCode %>" />
      <button class="btn btn-lg btn-warning btn-block" type="submit">
        Update Points
      </button>
    </form>
    <div class="mgtop"></div>
    <%- include("footer") -%>